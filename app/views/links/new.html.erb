<h1>New link</h1>

<div class="my-2">
  <%= link_to 'Back to index', links_path, class: 'text-teal-500' %>
</div>

<%= form_with(model: @link) do |form| %>
  <div class="w-1/3">
    <label for="email" class="block text-sm font-medium text-gray-700">Target</label>
    <div class="mt-1 flex rounded-md shadow-sm">
      <div class="relative flex items-stretch flex-grow focus-within:z-10">
        <%= text_field_tag 'link[target]', @link.target, class: 'focus:ring-teal-700 focus:border-teal-700 block w-full rounded-none rounded-l-md sm:text-sm p-2 border border-teal-300', placeholder: "https://foo.bar/" %>
      </div>
      <%= form.button type: :submit, class: '-ml-px text-teal-800 relative inline-flex items-center space-x-2 px-4 py-2 border border-teal-300 text-sm font-medium rounded-r-md bg-teal-200 focus:outline-none focus:ring-1 focus:ring-teal-700 focus:border-teal-700 hover:border-teal-500' do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-teal-800" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
        <span>Create</span>
      <% end %>
    </div>
    <% if form.object.errors.key?(:target) %>
      <p class="error text-sm text-red-400">
        <%= form.object.errors.full_messages_for(:target).join(', ') %>
      </p>
    <% end %>
  </div>
<% end %>
